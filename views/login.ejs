<%- include('partials/header') %>

<div class="max-w-md mx-auto mt-12 p-6 bg-white shadow-lg rounded-xl">
  <h2 class="text-2xl font-bold mb-6 text-center">Connexion</h2>

  <% if (error) { %>
    <div class="bg-red-100 text-red-700 border border-red-300 p-4 rounded mb-6">
      <%= error %>
    </div>
  <% } %>

  <form action="/api/auth/login" method="POST" class="space-y-4">
    <div>
      <label for="email" class="block mb-1 font-medium">Email :</label>
      <input type="email" id="email" name="email" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500">
    </div>

    <div>
      <label for="password" class="block mb-1 font-medium">Mot de passe :</label>
      <input type="password" id="password" name="password" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500">
    </div>

    <button type="submit" class="w-full bg-primary text-white py-2 rounded hover:bg-primary-dark transition">Se connecter</button>
  </form>
</div>

<%- include('partials/footer') %>

