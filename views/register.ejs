<%- include('partials/header') %>

<div class="max-w-md mx-auto mt-12 p-6 bg-white shadow-lg rounded-xl">
  <h1 class="text-2xl font-bold mb-6 text-center">CrÃ©er un compte</h1>

  <% if (error) { %>
    <div class="bg-red-100 text-red-700 border border-red-300 p-4 rounded mb-6">
      <%= error %>
    </div>
  <% } %>

  <form action="/api/auth/signup" method="POST" class="space-y-4">
    <div>
      <label for="username" class="block mb-1 font-medium">Nom d'utilisateur</label>
      <input type="text" id="username" name="username" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500">
    </div>

    <div>
      <label for="email" class="block mb-1 font-medium">Adresse email</label>
      <input type="email" id="email" name="email" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500">
    </div>

    <div>
      <label for="password" class="block mb-1 font-medium">Mot de passe</label>
      <input type="password" id="password" name="password" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500">
    </div>

    <button type="submit" class="w-full bg-primary text-white py-2 rounded hover:bg-primary-dark transition">
      S'inscrire
    </button>
  </form>
</div>

<%- include('partials/footer') %>
