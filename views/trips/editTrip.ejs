<h1 class="text-3xl font-bold mb-6">Modifier le voyage</h1>

<form action="/api/trips/<%= trip.id %>?_method=PUT" method="POST" class="max-w-lg mx-auto space-y-6">
  <div>
    <label for="lieux" class="block mb-1 font-medium text-gray-700">Lieu :</label>
    <input type="text" id="lieux" name="lieux" value="<%= trip.lieux %>" required
      class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
  </div>

  <div>
    <label for="dateDeb" class="block mb-1 font-medium text-gray-700">Date de début :</label>
    <input type="date" id="dateDeb" name="dateDeb" value="<%= trip.dateDeb.toISOString().split('T')[0] %>" required
      class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
  </div>

  <div>
    <label for="dateFin" class="block mb-1 font-medium text-gray-700">Date de fin :</label>
    <input type="date" id="dateFin" name="dateFin" value="<%= trip.dateFin.toISOString().split('T')[0] %>" required
      class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
  </div>

  <div>
    <label for="doc" class="block mb-1 font-medium text-gray-700">Documents requis</label>
    <select id="doc" name="type_doc_requis" multiple required
      class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 h-32">
      <% const docs = ["carte_d'identité", "passeport", "carnet_de_santé", "visa", "autorisation_parentale", "justificatif_domicile"]; %>
      <% docs.forEach(doc => { %>
        <option value="<%= doc %>" 
          <%= Array.isArray(trip.type_doc_requis) && trip.type_doc_requis.includes(doc) ? 'selected' : '' %>>
          <%= doc %>
        </option>
      <% }); %>
    </select>
  </div>

  <button type="submit"
    class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-md transition">Enregistrer</button>
</form>





